<% content_for :page_title do %>
  <%= link_to Spree.t(:blog_posts), admin_blog_posts_path %> /
  <%= @object.title %>
<% end %>

<% content_for :page_actions do %>
  <% if can?(:create, Spree::BlogPost) %>
    <%= button_link_to Spree.t(:new_blog_post), new_object_url, {class: "btn-success", icon: 'add', id: 'admin_new_blog_post'} %>
  <% end %>
<% end %>

<%= form_for [:admin, @object], html: {multipart: true} do |f| %>
  <fieldset data-hook="edit_blog_post">
    <%= render partial: 'form', locals: {f: f} %>
    <%= render partial: 'spree/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>