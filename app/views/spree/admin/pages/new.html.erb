<% content_for :page_title do %>
  <%= link_to Spree.t(:pages), spree.admin_pages_url %> /
  <%= Spree.t(:new_page) %>
<% end %>
<div data-hook="admin_page_new_form_header">
  <%= render partial: 'spree/admin/shared/error_messages', locals: { target: @page } %>
</div>
<div data-hook="admin_page_new_form">
  <%= form_for [:admin, @page], url: spree.admin_pages_url, method: :post do |f| %>
    <%= render partial: 'form', locals: { f: f } %>

    <div data-hook="admin_page_new_form_buttons">
      <%= render partial: 'spree/admin/shared/new_resource_links' %>
    </div>
  <% end %>
</div>
