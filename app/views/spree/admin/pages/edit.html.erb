<% content_for :page_title do %>
  <%= link_to Spree.t(:pages), spree.admin_pages_url %> /
  <%= Spree.t(:edit_page) %>
<% end %>
<div data-hook="admin_page_edit_form_header">
  <%= render partial: 'spree/admin/shared/error_messages', locals: {target: @page} %>
</div>
<div data-hook="admin_page_edit_form">
  <%= form_for [:admin, @page], url: spree.admin_page_url(@page), method: :put do |f| %>
    <%= render partial: 'form', locals: {f: f} %>

    <div data-hook="admin_page_edit_form_buttons">
      <%= render partial: 'spree/admin/shared/edit_resource_links' %>
    </div>
  <% end %>
</div>
