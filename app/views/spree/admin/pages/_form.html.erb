<div data-hook="admin_page_form_fields" class="row">
  <div class="col-xs-12 col-md-10">
    <%= f.field_container :title, class: ['form-group'] do %>
      <%= f.label :title, Spree.t(:title) %>
      <%= f.text_field :title, class: 'form-control' %>
      <%= f.error_message_on :title %>
    <% end %>
  </div>
  <div data-hook="admin_product_form_available_on" class="col-xs-12 col-md-2">
    <%= f.field_container :available_on, class: ['form-group'] do %>
      <%= f.label :available_on, Spree.t(:available_on) %>
      <%= f.error_message_on :available_on %>
      <%= f.text_field :available_on, value: datepicker_field_value(@page.available_on), class: 'datepicker form-control' %>
    <% end %>
  </div>

</div>
<div data-hook="admin_page_form_fields" class="row">
  <div class="col-xs-12">
    <%= f.field_container :permalink, class: ['form-group'] do %>
      <%= f.label :permalink, Spree.t(:permalink) %>
      <%= f.text_field :permalink, class: 'form-control' %>
      <%= f.error_message_on :permalink %>
    <% end %>
  </div>
</div>
<div class="row">
  <div data-hook="blog_post_content" class="col-xs-12">
    <%= f.field_container :content, class: ['form-group', 'field'] do %>
      <%= f.label :content, Spree.t(:content) %>
      <%= f.text_area :content, {id: 'page_content_body'} %>
      <%= f.error_message_on :content %>
    <% end %>
  </div>
</div>

<script type="text/javascript" charset="utf-8">
    Spree.ready($ => {
        CKEDITOR.replace('page_content_body', {
            height: 260,
        });
    })
</script>